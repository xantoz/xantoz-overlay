start() {
	einfo Starting sndiod ...
	start-stop-daemon --start --pidfile /var/run/sndiod.pid \
		--background --make-pidfile \
		--exec /usr/bin/sndiod -- ${SNDIO_OPTS}
	eend $?
}

stop() {
	einfo Stopping sndiod ...
	start-stop-daemon --stop --pidfile /var/run/sndiod.pid
	eend $?
}
